<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:local="clr-namespace:loginpagesample" x:Class="loginpagesample.login_page_samplePage">
    <StackLayout VerticalOptions="FillAndExpand" Padding="20">
        <Entry Placeholder="User" x:Name="UserEntry" HorizontalOptions="FillAndExpand"/>
    <Entry Placeholder="Password" x:Name="PasswordEntry" IsPassword="true" HorizontalOptions="FillAndExpand"/>
    <Button Text="Login" x:Name="LoginButton"
            HorizontalOptions="CenterAndExpand"/>
    </StackLayout>
</ContentPage>
