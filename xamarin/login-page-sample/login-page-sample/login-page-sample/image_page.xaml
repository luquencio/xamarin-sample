<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="loginpagesample.image_page">
	<ContentPage.Content>
          <StackLayout VerticalOptions="Center" Padding="20">
                <Image x:Name="ImageBox">
         <Image.Source>
           <OnPlatform  x:TypeArguments="ImageSource">
           <OnPlatform.Android>androidlogo.png</OnPlatform.Android>
           <OnPlatform.iOS>ioslogo.png</OnPlatform.iOS>
           </OnPlatform>
         </Image.Source>
       </Image>
            <StackLayout HorizontalOptions="CenterAndExpand" Spacing="10" VerticalOptions="Center" >
                 <Button Text="SMALL" x:Name="SmallButton" HorizontalOptions="CenterAndExpand"/>
                 <Button Text="MEDIUM" x:Name="MediumButton" HorizontalOptions="CenterAndExpand"/>
                 <Button Text="LARGE" x:Name="LargeButton" HorizontalOptions="CenterAndExpand"/>
            </StackLayout>
        </StackLayout>
	</ContentPage.Content>
</ContentPage>
